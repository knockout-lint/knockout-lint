{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"outDir": "build",
		"lib": ["ES6", "DOM"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"declaration": true,
		"declarationDir": "build",
		"declarationMap": true,
		// This will exclude any other global types
		"types": [ "node", "mocha" ],
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": [
		"./build",
		"./lib"
	]
}
