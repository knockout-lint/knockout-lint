{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"outDir": "build",
		"lib": ["ES6"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"declaration": true,
		"declarationDir": "build",
		"declarationMap": true,
		// This will exclude any other global types
		"types": [ "node" ],
		"moduleResolution": "node"
	},
	"exclude": [
		"test",
		"build",
		"spec",
		"demo"
	]
}
