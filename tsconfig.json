{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"outDir": "build",
		"lib": ["ES6", "DOM"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"declaration": true,
		"declarationDir": "build",
		"declarationMap": true,
		// This will exclude any other global types
		"types": [ "node" ],
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": [
		"./test",
		"./build",
		"./spec",
		"./demo",
		"./lib/resources"
	]
}
